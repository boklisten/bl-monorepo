{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strictPropertyInitialization": false, // TODO: enable this for stricter checks
    "module": "esnext",
    "moduleResolution": "node", // Switch from "bundler" to "node"
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
