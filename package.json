{
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "scripts": {
    "ace": "pnpm -F backend exec node ace",
    "prettier": "prettier --write --log-level warn '**/*.{js,mjs,ts,tsx,md,json,yml,css}' --ignore-path=.gitignore",
    "prettier:check": "prettier --check '**/*.{js,mjs,ts,tsx,md,json,yml,css}' --ignore-path=.gitignore",
    "lint": "eslint . --ignore-pattern '**/dist/*' --ignore-pattern '**/build/*' --ignore-pattern '**/.next/*' --ignore-pattern 'frontend/next-env.d.ts' --ignore-pattern 'backend/.adonisjs/*'",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "pnpm -r typecheck",
    "fix": "pnpm -wr '/^(lint:fix|typecheck)$/' && pnpm prettier",
    "test": "pnpm -r test",
    "dev": "pnpm -r --parallel dev",
    "start": "pnpm -F backend build && (pnpm -F backend start & pnpm -F frontend build && pnpm -F frontend start)"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@next/eslint-plugin-next": "^16.0.1",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@tsconfig/strictest": "^2.0.7",
    "@types/node": "^24.9.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.1.0",
    "eslint-plugin-chai-friendly": "^1.1.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
