{
  "extends": ["@tsconfig/strictest/tsconfig.json"],
  "compilerOptions": {
    "module": "NodeNext",
    "lib": ["ESNext"],
    "target": "ESNext",
    "noUnusedLocals": false, // fixme: delete this for line stricter checks
    "noUnusedParameters": false, // fixme: delete this line for stricter checks
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/src/*"],
      "@frontend/*": ["frontend/src/*"],
      "@backend/*": ["backend/src/*"]
    }
  }
}
